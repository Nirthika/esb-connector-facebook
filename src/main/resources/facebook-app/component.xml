<component name="facebook-app" type="synapse/template">
    <subComponents>
        <component name="getAppDetails">
            <file>getAppDetails.xml</file>
            <description>Gets the details of a Facebook application by app ID.</description>
        </component>
        <component name="isAppUserBanned">
            <file>isAppUserBanned.xml</file>
            <description>Test whether a particular user is banned by the app.</description>
        </component>
        <component name="banAppUser">
            <file>banAppUser.xml</file>
            <description>Ban a user from using the app.</description>
        </component>
        <component name="unbanAppUser">
            <file>unbanAppUser.xml</file>
            <description>Delete an existing user ban.</description>
        </component>
        <component name="createAppUserRole">
            <file>createAppUserRole.xml</file>
            <description>Create a new role for a specific user for the application.</description>
        </component>
        <component name="deleteAppUserRole">
            <file>deleteAppUserRole.xml</file>
            <description>Delete a specific users role for the application.</description>
        </component>
        <component name="createAppAchievements">
            <file>createAppAchievements.xml</file>
            <description>Register an achievement for a game.</description>
        </component>
        <component name="deleteAppAchievements">
            <file>deleteAppAchievements.xml</file>
            <description>Un-register an achievement for a game.</description>
        </component>
        <component name="updateAppDetails">
            <file>updateAppDetails.xml</file>
            <description>Update the details of app.</description>
        </component>
    </subComponents>
</component>