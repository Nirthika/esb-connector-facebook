<component name="facebook-users" type="synapse/template">
    <subComponents>
        <component name="getUserDetails">
            <file>getUserDetails.xml</file>
            <description>Gets details of a user by user ID.</description>
        </component>
        <component name="createUserAchievement">
            <file>createUserAchievement.xml</file>
            <description>Adds an achievement for a user.</description>
        </component>
        <component name="deleteUserAchievement">
            <file>deleteUserAchievement.xml</file>
            <description>Removes a users achievement.</description>
        </component>
        <component name="sendAppRequest">
            <file>sendAppRequest.xml</file>
            <description>Sends an app request to other users.</description>
        </component>
        <component name="createPost">
            <file>createPost.xml</file>
            <description>Adds a post to the user's feed.</description>
        </component>
        <component name="isFriend">
            <file>isFriend.xml</file>
            <description>To determine whether that tow users are friend with each other.</description>
        </component>
        <component name="getMutualFriends">
            <file>getMutualFriends.xml</file>
            <description>To get mutual friends of two users.</description>
        </component>
        <component name="publishNotification">
            <file>publishNotification.xml</file>
            <description>Publish app notifications to user.</description>
        </component>
        <component name="publishPhoto">
            <file>publishPhoto.xml</file>
            <description>Publish a photo to user profile.</description>
        </component>
    </subComponents>
</component>